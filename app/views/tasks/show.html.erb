


<h2><%= @tasks.title %></h2>
<p><%= @tasks.details %></p>
<% if @tasks.completed %>
<p>Task is completed</p>
<% else  %>
<p>Task is not completed</p>
<% end %>

<%= link_to "Edit The task", edit_task_path() %>

<%= link_to "Delete",
  task_path(@tasks),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
